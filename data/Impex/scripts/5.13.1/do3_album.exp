    XmlNodeSetAttribute (XMLDO3Report, 'xmlns:catWH_ru', 'urn:customs.ru:Information:WarehouseDocuments:WarehouseCommonAggregateTypesCust:5.13.1');
    XmlNodeSetAttribute (XMLDO3Report, 'DocumentModeID', '1008013E');
